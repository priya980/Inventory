<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/inven">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Barcode number"
            android:textStyle="bold"
            android:clickable="true"
            android:autoLink="all"
            android:background="#fff"
            android:textColorHint="#000"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <Button
            android:id="@+id/capture_barcode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#6300BFA5"
            android:text="SCAN BARCODE/QR CODE"
            android:onClick="captureBarcodePic"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="#6300BFA5"
            android:text="SUBMIT"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />





        <Button
            android:id="@+id/logout2"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:onClick="logout2"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="#6300BFA5"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>